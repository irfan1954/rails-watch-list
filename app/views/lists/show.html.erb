<h1><%= @list.name %></h1>

<h2>Movies:</h2>

<%= simple_form_for([@list, @bookmark]) do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit %>
<% end %>


<% if @list.bookmarks.empty? %>
  <p>No Movies in this List</p>
<% else %>
  <%= @list.bookmarks.each do |bookmark| %>
  <div>
    <p><%= bookmark.movie.title %></p>
    <p><%= bookmark.comment %></p>
  </div>
  <% end %>
<% end %>
